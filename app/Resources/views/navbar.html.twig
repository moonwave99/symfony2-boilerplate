<div id="navbar" class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="{{ path('mwlabs_frontend_home_index') }}">MWLabs</a>
      <div class="nav-collapse">

		{% block navigation %}{% endblock %}

		<div class="pull-right credentials">
			<i class="icon-lock icon-white"></i> 			
		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<a href="{{ path('fos_user_profile_show')}}">{{ app.user.username }}</a> |
			<a href="{{ path('fos_user_security_logout') }}">Logout</a>
		{% else %}
			<a href="{{ path('fos_user_security_login') }}">Login</a>		
		{% endif %}
		</div>
		
		<form class="navbar-search pull-right" action="{{ path('mwlabs_frontend_home_search') }}">
          <input type="text" class="search-query span2" placeholder="Search" name="q"/>
        </form>

      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>